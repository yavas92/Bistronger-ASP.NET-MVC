@model Bistronger.Data.Advert

@{
    ViewData["Title"] = "Verwijder";
}

<h1>Verwijder</h1>

<h3>Weet je zeker dat je deze advertentie wilt verwijderen?</h3>
<div>
    <h4>Advertentie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>
        <dt class="col-sm-2">
            Zaak
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Business.Name)
        </dd>
        <dt class="col-sm-2">
            Resterende weergaven
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shows)
        </dd>
        <dt class="col-sm-2">
            Afbeelding
        </dt>
        <dd class="col-sm-10">
            @if (Model.PhotoData != null)
            {
                <img src="data:image;base64,@System.Convert.ToBase64String(Model.PhotoData)" class="main-business-picture" />
            }
            else
            {
                <img src="~/res/img/noimage.png" alt="No picture" class="main-business-picture" />
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Verwijder" class="btn btn-danger" /> |
        <a asp-action="Index">Terug naar overzicht</a>
    </form>
</div>