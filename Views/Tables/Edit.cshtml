@using Bistronger.Models.Tables

@model TableEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Bewerk tafel</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="BusinessID" />

            <div class="form-group">
                <label asp-for="Seats" class="control-label">Zitplaatsen</label>
                <input asp-for="Seats" class="form-control" type="number"
                       step="1"
                       onkeypress="return event.keyCode === 8 || (event.charCode >= 48 && event.charCode <= 57) || (event.charCode >= 0 && event.charCode <= 9)" />
                <span asp-validation-for="Seats" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Available" /> Beschikbaar
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-businessID="@Model.BusinessID">Terug naar overzicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}