@using Bistronger.Models.Packages
@using Bistronger.Data.Enums

@model PackageCreateViewModel

@{
    ViewData["Title"] = "Aanmaken";
}

<h1>Create</h1>

<h4>Package</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>

                <select asp-for="Type">
                    @foreach (PackageType pType in (PackageType[])Enum.GetValues(typeof(PackageType)))
                    {
                        if (pType != PackageType.Unknown)
                        {
                            <option value="@pType">@EnumHelper.GetDisplayName(pType)</option>
                        }
                    }
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Amount" class="control-label">Hoeveelheid shows/credits</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Prijs</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar overzicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}